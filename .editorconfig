# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true
charset = utf-8

[*.{ts,js,tsx,jsx,mjs,cjs}]
indent_size = 2
indent_style = space

[*.json]
indent_size = 2
indent_style = space

[*.css]
indent_size = 2
indent_style = space

[*.md]
indent_size = 4
indent_style = space
